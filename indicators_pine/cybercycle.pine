alertcondition(buySignal, "Buy v6.2", "CC v6.2: BUY Signal")
alertcondition(sellSignal, "Sell v6.2", "CC v6.2: SELL Signal")
alertcondition(bullCross, "Bull Cross", "CC v6.2: Bull Cross (unfiltered)")
alertcondition(bearCross, "Bear Cross", "CC v6.2: Bear Cross (unfiltered)")
