    "BCH" => cfg_BCH_manAlpha
    "UNI" => cfg_UNI_manAlpha
    "PEPE" => cfg_PEPE_manAlpha
    "ONDO" => cfg_ONDO_manAlpha
    => cfg_DEF_manAlpha

